<h2>Lista de Postagens: </h2>
<hr>
<a href="postagens/add"><button type="submit" class="btn btn-success">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body"  style="position: relative; border: 1px 1px solid black">
            <h4>Titulo: {{titulo}}</h4>
            <h6>Slug: </h6>
            <small>{{slug}}</small>
            <h6>Descricao:</h6>
            <p>{{descricao}}</p>
            <h6>Conteudo: </h6>
            <p>{{conteudo}}</p>
            <h6>Categoria: </h6>
            <p>{{categoria}}</p>
            <a href="postagens/delete/{{_id}}"><button type="submit"  class="btn btn-danger " style="position: absolute; right: 20px;  bottom: 16px; ">Apagar</button></a><br>
            <a href="posts/edit/{{_id}}"><button type="submit" class="btn btn-success mt-4">Editar Post</button></a>
        </div>
        
    </div>
{{else}}
    <h6 class="mt-3">Nenhuma categoria registrada!</h6>
{{/each}}