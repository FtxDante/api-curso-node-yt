<div class="card">
    <div class="card-body">
        <h4>Nova postagem: </h4>
        <form action="/postagens/nova" method="post" autocomplete="off">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" class="form-control">
            <label for="slug" >Slug: </label>
            <input type="text" name="slug" class="form-control">
            <label for="descricao">Descric√£o: </label>
            <input type="text" name="descricao" class="form-control">
            <label for="conteudo">Conteudo: </label>
            <textarea name="conteudo" cols="30" rows="10" class="form-control"></textarea>
            <label for="categorias" class="mt-1">Categoria: </label>
            <select name="categoria" class="form-select form-select-lg mb-3">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-2" type="submit">Criar Postagem</button>
        </form>
    </div>
</div>