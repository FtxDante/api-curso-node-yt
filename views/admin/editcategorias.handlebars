<h3>Editar categoria:  </h3>
<div class="card">
    <div class="card-body">
        <form action="/categorias/edit" method="post">
                <input type="hidden" name="id" value="{{_id}}"></input>
                <label for="nome">Nome: </label>
                    <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control" value="{{nome}}" autocomplete="off" ></input>
                <label for="slug">Slug: </label>
                    <input type="text" id="slug" name="slug" class="form-control" placeholder="Slug da cartegoria" value="{{slug}}" autocomplete="off"></input>
                    <br>
                <button type="submit" class="btn btn-success">Atualizar</button>
        </form>
    </div>
</div>

{{#each erros}}
    <div class="alert alert-danger mt-4">{{text}}</div>
{{else}}
{{/each}}