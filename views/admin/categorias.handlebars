<h2>Lista de Categorias: </h2>
<hr>
<a href="categorias/add"><button type="submit" class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body"  style="position: relative; border: 1px 1px solid black">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small>
            <a href="categorias/delete/{{_id}}"><button type="submit"  class="btn btn-danger " style="position: absolute; right: 20px;  bottom: 16px; ">Apagar</button></a><br>
            <a href="categorias/edit/{{_id}}"><button type="submit" class="btn btn-success mt-4">Editar Categoria</button></a>
        </div>
        
    </div>
{{else}}
    <h6 class="mt-3">Nenhuma categoria registrada!</h6>
{{/each}}